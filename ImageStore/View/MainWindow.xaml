        <Label x:Name="Password_label" Content="Password" HorizontalAlignment="Left" Margin="190,284,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="Password_textBox" HorizontalAlignment="Left" Height="39" Margin="115,344,0,0"  VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="262" FontSize="18"/>
    </Grid>
</Window>
